<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    app:cardBackgroundColor="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popular_people_CV"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <com.app.bigshows.utils.RoundImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/popular_imageview"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.app.bigshows.utils.BigShowsFontTextView
            app:fontName="LobsterTwo-Regular.otf"
            android:id="@+id/people_knownfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:text="Almaty region "
            android:textColor="@android:color/white"
            android:textSize="14sp"

            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/people_name"/>

        <com.app.bigshows.utils.BigShowsFontTextView
            app:fontName="LobsterTwo-Regular.otf"
            android:id="@+id/people_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Medeu"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginStart="23dp"
            android:layout_above="@+id/people_knownfor"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
